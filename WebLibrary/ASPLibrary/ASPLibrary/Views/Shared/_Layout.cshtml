<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPLibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="MainNav">
                <ul class="HeaderList">
                    <li class="ImageInList"">
                        <img src="/images/Pioneers_pin_rs.svg.png" width="5%" height="5%"/>
                    </li>
                    <li>
                        <div class="HeaderItems">
                            <a Class=MainHeader asp-area="" asp-controller="Home" asp-action="Index">
                                Электронная библиотека им. В.И.Ленина
                            </a>
                        </div>
                    </li>
                    <li>
                        <div class="HeaderItems">
                            <a asp-area="" asp-controller="Home" asp-action="Index">
                                Центральная
                            </a>
                        </div>
                    </li>
                    <li>
                        <div class="HeaderItems">
                            <a asp-area="" asp-controller="Home" asp-action="Index">
                                Подать декрет
                            </a>
                        </div>
                    </li>
                    <li>
                        <div class="HeaderItems">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">@User.Identity.Name (Выход)</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Вход</a>
                            }
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ASPLibrary - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
